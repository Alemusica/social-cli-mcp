# ========================================
# Social CLI MCP - Environment Variables
# ========================================
# Copy this to .env and fill in your credentials
# NEVER commit .env to git!

# ─────────────────────────────────────────
# X (Twitter) API
# Get from: developer.twitter.com
# ─────────────────────────────────────────
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ─────────────────────────────────────────
# Reddit API
# Get from: reddit.com/prefs/apps
# Create a "script" type application
# ─────────────────────────────────────────
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_USER_AGENT=social-cli-mcp/1.0.0

# ─────────────────────────────────────────
# LinkedIn API
# Get from: linkedin.com/developers
# ─────────────────────────────────────────
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=

# ─────────────────────────────────────────
# Instagram Graph API (Creator/Business accounts only)
# Get from: developers.facebook.com
# Requires Facebook Page linked to Instagram
# ─────────────────────────────────────────
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=
FACEBOOK_PAGE_ID=

# ─────────────────────────────────────────
# Optional: Grok/xAI for AI-generated posts
# Get from: console.x.ai
# ─────────────────────────────────────────
XAI_API_KEY=
